<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Traveldanangapp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:theme="@style/Theme.SearchLocation"
            android:name=".ui.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.location.LocationDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.LocationDetail" />
        <activity
            android:name=".ui.changepass.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.ChangePassword" />
        <activity
            android:name=".ui.forgotpass.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.ForgotPassword" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.SignIn.SignUp" />
        <activity
            android:name=".ui.singin.SignInActivity"
            android:exported="false"
            android:theme="@style/Theme.SignIn.SignUp" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>