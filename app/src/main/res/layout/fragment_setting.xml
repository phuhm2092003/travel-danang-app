<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GrayColor3"
    android:orientation="vertical"
    tools:context=".ui.user.SettingFragment">

    <LinearLayout
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PrimaryColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photoCurrentUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/photo_default" />

        <LinearLayout
            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameCurrentUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emailCurrentUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="example@gmail.com"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:textColor="@color/TextColor1"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user1"
            android:text="Thiết lập tài khoản"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/GrayColor3" />

        <TextView
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_pass"
            android:textColor="@color/TextColor1"
            android:text="Đổi mật khẩu"
            android:gravity="center_vertical"
            android:drawablePadding="12dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="14sp"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_bg1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/inter_regular"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>